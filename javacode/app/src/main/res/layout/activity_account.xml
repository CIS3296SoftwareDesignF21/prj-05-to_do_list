<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainAct">




    <ImageView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/todo"

        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:layout_above="@+id/workoutList"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/purple_500"
            android:layout_toStartOf="@+id/schoolList"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            android:text="Grocery List"
            android:id="@+id/btn_grocery"
            tools:ignore="SpeakableTextPresentCheck" >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_toStartOf="@+id/schoolList"
                android:text="Grocery List"

                />


        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/btn_school"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/collaList"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="School List"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/purple_500"
            app:cardElevation="7dp"
            tools:ignore="SpeakableTextPresentCheck" >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_above="@+id/workoutList"
                android:layout_alignParentStart="true"



                android:layout_toStartOf="@+id/schoolList"
                android:text="School List"
                tools:ignore="SpeakableTextPresentCheck"
                />



        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/workoutList"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"

            android:layout_toStartOf="@+id/schoolList"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            android:text="Grocery List"
            app:cardBackgroundColor="@color/purple_500"
            tools:ignore="SpeakableTextPresentCheck"
            android:id="@+id/btn_workout">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_toStartOf="@+id/schoolList"
                android:text="Workout List"

                />


        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/collaList"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="School List"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/purple_500"
            app:cardElevation="7dp"
            android:id="@+id/btn_collab"
            tools:ignore="SpeakableTextPresentCheck" >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_above="@+id/workoutList"
                android:layout_alignParentStart="true"



                android:layout_toStartOf="@+id/schoolList"
                android:text="Collabrative List"
                tools:ignore="SpeakableTextPresentCheck"
                />



        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
