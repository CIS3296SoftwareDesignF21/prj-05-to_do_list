<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu"
    android:orientation="vertical"
    tools:context=".MainAct">




    <ImageView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/todo"

        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_grocery"
            android:layout_width="150dp"

            android:layout_height="150dp"
            android:layout_above="@+id/workoutList"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_toStartOf="@+id/schoolList"
            android:background="@drawable/grocery_list_logo"
            android:foreground="@drawable/grocery_list_logo"
            android:text="Grocery List"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            tools:ignore="SpeakableTextPresentCheck">


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_school"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/collaList"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:foreground="@drawable/school_list_logo"
            android:text="School List"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            tools:ignore="SpeakableTextPresentCheck">


        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_workout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/workoutList"
            android:layout_alignParentStart="true"

            android:layout_margin="10dp"
            android:layout_toStartOf="@+id/schoolList"
            android:foreground="@drawable/workout_list_logo"
            android:text="Grocery List"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            tools:ignore="SpeakableTextPresentCheck">


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:id="@+id/btn_collab"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/collaList"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:foreground="@drawable/collab_list_logo"
            android:text="School List"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            tools:ignore="SpeakableTextPresentCheck">

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
